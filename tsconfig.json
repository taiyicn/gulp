{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist"
	},
	"include": ["src/*.ts"],
	"exclude": ["node_modules/**"]
}
